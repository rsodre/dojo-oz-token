{
  "files.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/target": true,
    "**/.github": true,
    "**/.next": true,
    "**/*.tsbuildinfo": true,
  },
  "search.exclude": {
    "**/*-lock.json": true,
    "**/*-lock.yaml": true,
    "**/*.lock": true,
    "**/dist": true,
    "**/.gitignore": true,
    "**/.gitmodules": true,
    "**/manifest*.json": true,
    "**/bindings/**": true,
    "client/public/**": true,
  },
  "typescript.validate.enable": true,
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[css][scss]": {
    "editor.formatOnPaste": false
  },
  "[cairo]": {
    "editor.tabSize": 4,
  },
  "cairo1.languageServerPath": "${userHome}/.dojo/bin/dojo-language-server",
  "cairo1.enableLanguageServer": true,
  "cairo1.enableScarb": true
}